<%- include('nav') %>
<div class="content">
    <div class="container">
        <h3>Enregister emploi du temps</h3>
        <div class="col-lg-10">
          <% if(error) { %>
            <% for(item of error){ %>
                <div class="alert alert-danger">
                    <%= item %>
                </div>
            <% } %>
         <% } %>
            <form action="" method="post">
                <input type="hidden" value="<%= FiliereId %>" name="filieres">
                <input type="hidden" value="<%= OptionId %>" name="options">
                <input type="hidden" value="<%= SemestreId %>" name="semestres">
                <div class="form-group">
                    <label for="">Professeur/Matiere : </label>
                    <select name="profec" id=""  class="form-control">
                        <% for(item of profec){ %>                         
                            <option value="<%= item.id %>"><%= item.Prof.nom %>/<%= item.Ec.nom %></option>
                        <% } %>  
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Debut du cours : </label>
                    <input type="number" name="heureDebut" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Fin du cours : </label>
                    <input type="number" name="heureFin"  class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Date :</label>
                    <input type="date" name="date"  class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Salle : </label>
                    <select name="salle" id=""  class="form-control">
                        <% for(item of salles){ %>                         
                            <option value="<%= item.id %>">Salle <%= item.numero %></option>
                        <% } %>  
                    </select>
                </div>
                
                <div class="form-group">
                   <button type="submit" class="btn form-control" style=" background-color: #1b37559d;">Enregister</button>
                </div> 
            </form>
        </div>
    </div>
    
</div>
 
