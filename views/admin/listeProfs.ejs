<%- include ('nav') %> 
<div class="content">
    <div class="container">
      <div class="row tableau">
        <div class="col-lg-8">
            <h3>Profs en Semestre <%=  SemestreId   %></h3>
          <table class="table">
            <thead>
              <tr>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Matieres</th>
              </tr>
            </thead>
            <tbody>
              <% for(item of profs){ %>
                <tr>
                  <td>PROF-<%= item.id %> </td>
                  <td><%= item.nom %> </td>
                  <td><%= item.ec %> </td>
                </tr>
      
              <% } %>  
            </tbody>
          </table>
        </div>
        <div class="col-lg-3 ajout">
            <h4>Ajouter un professeur</h4>
            <form action="/admin/addProfs/<%= FiliereId %>/<%= OptionId %>" method="post" enctype="multipart/form-data">
                <input type="hidden" name="filieres" value="<%= FiliereId %> ">
                <input type="hidden" name="options" value="<%= OptionId %> ">
                <input type="hidden" name="semestres" value="<%= SemestreId %> ">
             
                  <div class="form-group">
                    <label for="">Nom : </label>
                    <input type="text" name="nom" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="">Prenom : </label>
                    <input type="text" name="prenom" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="">Email: </label>
                    <input type="email" name="email" class="form-control">
                  </div> 
                  <div class="form-group">
                    <label for="">Contact: </label>
                    <input type="text" name="contact" class="form-control">
                  </div>   
                  <div class="form-group">
                    <label for="">Matieres : </label>
                    <select name="ecs" id="" class="form-control">
                      <% for(item of ecs){ %>
                        <option value="<%= item.id %>" id="<%= item.id %>"><%= item.Ue.nom %>/<%= item.nom %></option>
                      <% } %>
                    </select>
                  </div>  
                  <div class="form-group">
                    <button class="btn form-control" type="submit" style=" background-color: #1b37559d;">Ajouter</button>
                  </div>
                </form>
        </div>
      </div>
    </div>
</div>