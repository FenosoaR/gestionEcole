      <% if(user){ %>
      <a href="/logout" class="btn">Deconnexion</a>
      <% } %>
    </li>
  </ul>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 etu-menu">
      <div class="form-group  icone">
        <i class="fa fa-info"></i> <a href="/etudiants/home">Informations </a>
      </div>
      <div class="form-group icone">
        <i class="fa fa-calendar"></i>  <a href="/etudiants/edt/<%= etudiant.FiliereId %>/<%= etudiant.OptionId %>/<%= etudiant.SemestreId %>">Emploi du temps</a>
      </div>
      <div class="form-group icone">
          <% if(etudiant.delegue == true){ %>
          <i class="fa fa-book"></i>  <a href="/etudiants/cahierTexte">Cahier de texte</a>
          <% } %> 
      </div>
      <div class="form-group icone">
         <i class="fa fa-sticky-note"></i> Releve de Note : 
          <ul>
            <% for(item of semestres){ %>
            <li><a href="/etudiants/releveNote/<%= etudiant.FiliereId %>/<%= etudiant.OptionId %>/<%= item.id %>/<%= etudiant.id %>">S<%= item.nom %></a> </li>
            <% } %>
          </ul>
        
      </div>

    </div>
    <div class="col-lg-10">
      <div class="info">
        <div class="form-group">
          <span class="gras">Filiere : </span><%= etudiant.Filiere.nom %>    
        </div>
        <div class="form-group">
          <span class="gras">Option : </span><%= etudiant.Option.intitule %> en S<%= etudiant.Semestre.nom %>
        </div>
        <hr>

        <div class="form-group">
          <span class="gras">Nom : </span><%= etudiant.nom %>
        </div>
        <div class="form-group">
          <span class="gras">Prenom : </span><%= etudiant.prenom %>
        </div>
        <div class="form-group">
          <span class="gras">Numero matricule : </span> ETU-<%= etudiant.id %>
        </div>
        <div class="form-group">
          <span class="gras">Date de Naissance:</span> <%= getDate(etudiant.dateNaissance)%>
        </div>

        <div class="form-group">
          <span class="gras">Contact:</span> <%= etudiant.contact %>

        </div>

        <div class="form-group">
          <span class="gras">Email: </span> <%= etudiant.email %>
        </div>

        <div class="form-group">
          <span class="gras">Date d'inscrription: </span> <%= getDate(etudiant.createdAt) %>
        </div>
      </div>
    </div>
